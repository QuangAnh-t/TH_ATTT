<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgr">

        <TextView
            android:id="@+id/textView"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"

            android:foregroundGravity="center"
            android:gravity="center"
            android:shadowColor="#80000000"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="6"
            android:text="Thực Hành An Toàn Thông Tin"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/madichvong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mã Dịch Vòng"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="10dp"
            android:backgroundTint="#FF5722"
            app:cornerRadius="16dp"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/maaffine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Mã Affine"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="10dp"
            android:backgroundTint="#FFEB3B"
            app:cornerRadius="16dp"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="@+id/mathaythe"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="@+id/mathaythe"
            app:layout_constraintTop_toBottomOf="@+id/mathaythe" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mavigenere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mã Vigenere"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="10dp"
            android:backgroundTint="#8BC34A"
            app:cornerRadius="16dp"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="@+id/maaffine"
            app:layout_constraintHorizontal_bias="0.21"
            app:layout_constraintStart_toStartOf="@+id/maaffine"
            app:layout_constraintTop_toBottomOf="@+id/maaffine" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mathaythe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mã Thay Thế"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="10dp"
            android:backgroundTint="#FFC107"
            app:cornerRadius="16dp"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="@+id/madichvong"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="@+id/madichvong"
            app:layout_constraintTop_toBottomOf="@+id/madichvong" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mahill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mã Hóa Hill"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="10dp"
            android:backgroundTint="#4CAF50"
            app:cornerRadius="16dp"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="@+id/mavigenere"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="@+id/mavigenere"
            app:layout_constraintTop_toBottomOf="@+id/mavigenere" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mahang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mã Hàng"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="10dp"
            android:backgroundTint="#009688"
            app:cornerRadius="16dp"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="@+id/mahill"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="@+id/mahill"
            app:layout_constraintTop_toBottomOf="@+id/mahill" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mathaythedonbang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mã Thay thế đơn bảng"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:padding="10dp"
            android:backgroundTint="#03A9F4"
            app:cornerRadius="16dp"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="@+id/mahang"
            app:layout_constraintHorizontal_bias="0.534"
            app:layout_constraintStart_toStartOf="@+id/mahang"
            app:layout_constraintTop_toBottomOf="@+id/mahang" />

        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="177dp"
            android:layout_height="277dp"
            android:layout_gravity="center"
            android:layout_marginStart="236dp"
            android:contentDescription="My image description"
            android:src="@drawable/anhnhom8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.832" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
