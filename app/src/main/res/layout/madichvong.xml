<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MadichvongActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="104dp"
        android:text="Mã Dịch Vòng"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/vanban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="164dp"
        android:hint="Nhập Văn Bản"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/khoak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nhập khóa K"
        app:layout_constraintEnd_toEndOf="@+id/vanban"
        app:layout_constraintStart_toStartOf="@+id/vanban"
        app:layout_constraintTop_toBottomOf="@+id/vanban" />

    <Button
        android:id="@+id/mahoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Mã Hóa"
        app:layout_constraintStart_toStartOf="@+id/khoak"
        app:layout_constraintTop_toBottomOf="@+id/khoak" />

    <Button
        android:id="@+id/giaima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giải Mã"
        app:layout_constraintBottom_toBottomOf="@+id/mahoa"
        app:layout_constraintStart_toEndOf="@+id/mahoa"
        app:layout_constraintTop_toTopOf="@+id/mahoa" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="200dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Kết quả sẽ hiển thị ở đây"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mahoa" />

</androidx.constraintlayout.widget.ConstraintLayout>